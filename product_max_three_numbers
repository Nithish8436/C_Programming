//product of max three numbers

#include <stdio.h>

void sort(int arr[],int n)
{
    for(int i=0;i<n-1;i++)
    {
        for(int j=0;j<n-i-1;j++)
        {
            if(arr[j]>arr[j+1])
            {
                int temp=arr[j];
                arr[j]=arr[j+1];
                arr[j+1]=temp;
            }
        }
    }
}

int maxproduct(int arr[],int length)
{
    
    if(length<3)
    {
        return 0;
    }
    
    sort(arr,length);
    
    int case1=arr[length-1]*arr[length-2]*arr[length-3];       //it product the last three max number product
    int case2=arr[0]*arr[1]*arr[length-1];                     //it product of alternative three max number product 
    
    return case1>case2?case1:case2;
}

int main()
{
    int n;
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    
    int length=sizeof(arr)/sizeof(arr[0]);
    
    int result=maxproduct(arr,length);
    
    
    printf("%d",result);
  
    return 0;
}
